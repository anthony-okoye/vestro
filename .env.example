# Database Configuration
# For local development, use PostgreSQL or SQLite
# For production (Vercel), use Vercel Postgres or external PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/resurrection_stock_picker"

# Direct database URL for migrations (bypasses connection pooling)
# Required for Vercel Postgres and other pooled connections
# For local development, this can be the same as DATABASE_URL
DIRECT_URL="postgresql://user:password@localhost:5432/resurrection_stock_picker"

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Cron Job Authentication (for Vercel Cron)
# Generate a secure random string for production
CRON_SECRET="your-secure-random-string-here"

# Data Source URLs
# SEC EDGAR - No API key required for public data
SEC_EDGAR_BASE_URL="https://www.sec.gov/cgi-bin/browse-edgar"
SEC_EDGAR_API_URL="https://data.sec.gov"

# Yahoo Finance - Public scraping endpoints (no official API key)
YAHOO_FINANCE_BASE_URL="https://finance.yahoo.com"
YAHOO_FINANCE_QUERY_URL="https://query2.finance.yahoo.com"

# Finviz - Public screener (no API key for basic access)
FINVIZ_BASE_URL="https://finviz.com"
FINVIZ_SCREENER_URL="https://finviz.com/screener.ashx"

# Federal Reserve Economic Data (FRED)
FEDERAL_RESERVE_API_URL="https://api.stlouisfed.org/fred"
FEDERAL_RESERVE_API_KEY=""

# CNBC - Public news and market data
CNBC_BASE_URL="https://www.cnbc.com"
CNBC_API_URL="https://api.cnbc.com"

# Bloomberg - Public market data
BLOOMBERG_BASE_URL="https://www.bloomberg.com"

# Morningstar - Requires subscription or API key
MORNINGSTAR_BASE_URL="https://www.morningstar.com"
MORNINGSTAR_API_KEY=""

# Reuters - Public company data
REUTERS_BASE_URL="https://www.reuters.com"

# Simply Wall St - Requires API key
SIMPLY_WALL_ST_API_URL="https://api.simplywall.st"
SIMPLY_WALL_ST_API_KEY=""

# TradingView - Public charts (optional)
TRADINGVIEW_BASE_URL="https://www.tradingview.com"

# TipRanks - Requires API key
TIPRANKS_API_URL="https://www.tipranks.com/api"
TIPRANKS_API_KEY=""

# MarketBeat - Public analyst ratings
MARKETBEAT_BASE_URL="https://www.marketbeat.com"

# Rate Limiting Configuration (requests per minute)
RATE_LIMIT_SEC_EDGAR=10
RATE_LIMIT_YAHOO_FINANCE=60
RATE_LIMIT_FINVIZ=30
RATE_LIMIT_FEDERAL_RESERVE=120
RATE_LIMIT_CNBC=60
RATE_LIMIT_BLOOMBERG=30
RATE_LIMIT_MORNINGSTAR=30
RATE_LIMIT_REUTERS=60
RATE_LIMIT_SIMPLY_WALL_ST=30
RATE_LIMIT_TRADINGVIEW=30
RATE_LIMIT_TIPRANKS=30
RATE_LIMIT_MARKETBEAT=30

# Cache Configuration (in seconds)
CACHE_MACRO_DATA=3600
CACHE_SECTOR_DATA=86400
CACHE_QUOTES=900
CACHE_COMPANY_PROFILES=604800
CACHE_FINANCIAL_FILINGS=86400
CACHE_ANALYST_RATINGS=86400
CACHE_VALUATION_DATA=86400

# Request Timeout Configuration (in milliseconds)
REQUEST_TIMEOUT=30000
REQUEST_RETRY_ATTEMPTS=3
REQUEST_RETRY_DELAY=1000
